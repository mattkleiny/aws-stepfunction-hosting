<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Description>A native windows visualizer for Step Function executions</Description>
    <UseWindowsForms>true</UseWindowsForms>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>visualizer.ico</ApplicationIcon>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\Amazon.StepFunction.Hosting\Amazon.StepFunction.Hosting.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="DiffPlex" Version="1.7.0" PrivateAssets="compile" />
    <PackageReference Include="DiffPlex.Wpf" Version="1.3.1" PrivateAssets="compile" />
    <PackageReference Include="Microsoft.Msagl" Version="1.1.3" PrivateAssets="compile" />
    <PackageReference Include="Nodify" Version="1.7.0" PrivateAssets="compile" />
  </ItemGroup>
  <ItemGroup>
    <Resource Include="visualizer.ico" />
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="Collectors\DiffCollector.cs" />
  </ItemGroup>
</Project>