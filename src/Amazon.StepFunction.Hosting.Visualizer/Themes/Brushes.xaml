<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <SolidColorBrush x:Key="ForegroundBrush" Color="White" />
  <SolidColorBrush x:Key="DisabledForegroundBrush" Color="Gray" />

  <SolidColorBrush x:Key="BackgroundBrush" Color="#333337" />
  <SolidColorBrush x:Key="ContrastBackgroundBrush" Color="#1B1B1C" />
  <SolidColorBrush x:Key="HighlightedBackgroundBrush" Color="#3F3F46" />

  <SolidColorBrush x:Key="BorderBrush" Color="#3F3F3F" />
  <SolidColorBrush x:Key="DisabledBorderBrush" Color="Gray" />
  <SolidColorBrush x:Key="HighlightedBorderBrush" Color="#7EB4EA" />
  <SolidColorBrush x:Key="FocusedBorderBrush" Color="#569DE5" />

  <SolidColorBrush x:Key="ActiveStateBrush" Color="#D29135" />
  <SolidColorBrush x:Key="SuccessfulStateBrush" Color="#8DD28A" />
  <SolidColorBrush x:Key="FailedStateBrush" Color="#BA3F31" />

  <SolidColorBrush x:Key="LabelBrush" Color="Gray" />
  <SolidColorBrush x:Key="TitleBrush" Color="Gray" Opacity="0.2" />

</ResourceDictionary>